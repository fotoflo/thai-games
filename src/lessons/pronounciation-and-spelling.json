        {
          "text": "ช่วยสะกดทีละตัว",
          "translation": "Please spell it letter by letter",
          "romanization": "chûai sà-gòt thee-lá dtua"
        },
        {
          "text": "สะกดให้ช้าๆ",
          "translation": "Spell it slowly",
          "romanization": "sà-gòt hâi cháa cháa"
        }
      ]
